<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">
<!--LOGIN-->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.rentingapp.ui.login.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.rentingapp.ui.register.RegisterFragment"
        android:label="Register" >
        <action
            android:id="@+id/action_registerFragment_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>

<!-- OTHER PAGES -->
    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.rentingapp.ui.home.Home"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/nav_search"
        android:name="com.example.rentingapp.ui.search.Search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/nav_rent_near_me"
        android:name="com.example.rentingapp.ui.rentNearMe.RentNearMe"
        tools:layout="@layout/fragment_rent_near_me" />
    <fragment
        android:id="@+id/nav_rent_out"
        android:name="com.example.rentingapp.ui.rentOut.RentOut"
        tools:layout="@layout/fragment_rent_out" />
    <fragment
        android:id="@+id/nav_my_rents"
        android:name="com.example.rentingapp.ui.myRents.MyRents"
        tools:layout="@layout/fragment_my_rents" />

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.rentingapp.ui.details.DetailsFragment"
        android:label="Details">
        <argument
            android:name="item"
            app:argType="com.example.rentingapp.RentalItem" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.rentingapp.ui.home.Home"
        android:label="Home">
        
        <action
            android:id="@+id/action_home_to_details"
            app:destination="@id/detailsFragment" />
    </fragment>

</navigation>

